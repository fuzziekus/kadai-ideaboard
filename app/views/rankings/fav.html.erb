<h1>Favランキング</h1>
<% if @ideas.present? %>
  <div class="row">
    <% @ideas.each_with_index do |idea, index| %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <!--<div class="panel panel-default">-->
          <!--  <div class="panel-body linkbox">-->
          <!--    -->
          <!--    <p class="item-title"><%= simple_format h idea.content %></p>-->
          <!--  </div>-->
          <!--  <div class="panel-footer">-->
          <div class="linkbox">
          <%= render 'ideas/idea', idea: idea, color: %w( #AFEEEE #EEE8AA #00FFFF #ADFF2F ).sample %>
              <p class="text-center"><%= index+1 %>位: <%= @ranking_counts[idea.id] %> Favs</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
