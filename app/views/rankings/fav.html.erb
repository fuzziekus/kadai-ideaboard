<h1>Favランキング</h1>
<% if @ideas.present? %>
  <div class="row">
    <% @ideas.each_with_index do |idea, index| %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-body linkbox">
              <%= link_to '', idea %>
              <p class="item-title"><%= idea.content %></p>
            </div>
            <div class="panel-footer">
              <p class="text-center"><%= index+1 %>位: <%= @ranking_counts[idea.id] %> Favs</p>
                <% if logged_in? %>
                  <div class="buttons text-center" role="group">
                    <%= render 'favorites/fav_button', idea: idea %>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
