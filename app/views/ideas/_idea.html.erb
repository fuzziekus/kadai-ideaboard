<div class="linkbox" style="background-color:<%=color%>">
    <% if logged_in? %>
        <%= render 'favorites/fav_button', idea: idea %>
    <% end %>
    <p class="postit">
        <% user = User.find_by(id: idea.user_id) %>
        <span>User : <%= link_to user.name, user %> <br><%= idea.updated_at %> </span>
        <div class="postit2">
            <% unless idea.image.blank? %>
                <div class="thumbnail" style="background-color:<%=color%>">
                    <%= link_to image_tag(idea.image, options = { :border => '0', :padding => '0px',:margin => '0px' }), idea %>
                </div>
            <% end %>
            <%= link_to simple_format( h(idea.content)), idea %>
        </div>
    </p>

</div>