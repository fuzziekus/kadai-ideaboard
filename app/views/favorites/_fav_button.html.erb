<% if current_user.beingfavorite?(idea) %>
  <%= form_for(current_user.favorites.find_by(idea_id: idea.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :idea_id, idea.id %>
    <%= f.submit 'Unfav', class: 'btn btn-danger btn-xs' %>
  <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :idea_id, idea.id %>
      <%= f.submit 'Fav', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>

