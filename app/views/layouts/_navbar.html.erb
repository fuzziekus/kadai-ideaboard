<header>
  <nav class="navbar navbar-inverse navbar-static-top" style="background-color: #000; color=#000">
    <div class="container">
      <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <ul class="nav navbar-nav navbar-left">
	      <li><a href="/">Home</a></li>
      </ul>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <%= search_form_for @search, url: root_path, class: 'navbar-form navbar-left' do |f| %>
          <div class="form-group">
            <%= f.text_field :content_cont, class: 'form-control', placeholder: '検索キーワード' %>
            <%= f.submit ("検索") , class: 'btn btn-default'%>
          </div>
          <% end %>
			    
			    <ul class="nav navbar-nav navbar-right">
			    <li>
            <%= link_to rankings_fav_path do %>
              <span class="glyphicon glyphicon-signal" aria-hidden="true"></span>
              Favランキング
            <% end %>
          </li>
          <% if logged_in? %>
            
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="gravatar">
                  <img src="<%= gravatar_url(current_user, size: 20) %>" alt="" class="img-circle">
                </span>
                <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'マイページ', user_path(current_user) %>
                </li>
                <li><%= link_to 'Favorite Posts', favorites_path %></li>
                <li role="separator" class="divider"></li>
                <li>
                  <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to '新規登録', signup_path %></li>
            <li><%= link_to 'ログイン', login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
