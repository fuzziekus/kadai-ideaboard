<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>IdeaBoard</h1>
        <% unless logged_in? %>
          <%= link_to 'IdeaBoardを始める', signup_path, class: 'btn btn-success btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
  
  <% if logged_in? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

        <%= form_for( @idea ) do |f| %>
          <div class="form-group">
            <%= f.text_area :content, :placeholder => "アイデアを投稿してください(最大255文字)", class: 'form-control', rows: 5 %>
            <%= f.label "画像", class: 'control-label', style: "color:#fff"  %>
            <%= f.file_field :image,  class: 'filestyle', "data-buttonText": "ファイル選択" %>
          </div>
          <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
        <% end %>
    </div>
  </div>
  <br>
  <% end %>

<%= render 'ideas/ideas', ideas: @ideas %>