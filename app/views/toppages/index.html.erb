<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>IdeaBoard</h1>
        <% unless logged_in? %>
          <%= link_to 'IdeaBoardを始める', signup_path, class: 'btn btn-success btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>


  <%= form_for(@idea) do |f| %>
    <div class="form-group">
      <%= f.text_area :content, class: 'form-control', rows: 5 %>
    </div>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
  <% end %>

<br>

<%= render 'ideas/ideas', ideas: @ideas %>